<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back_login">

  <com.jetradarmobile.snowfall.SnowfallView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:snowflakeAlphaMax="205"
      app:snowflakeAlphaMin="100"
      app:snowflakeAngleMax="5"
      app:snowflakeSizeMax="8dp"
      app:snowflakeSizeMin="5dp"
      app:snowflakeSpeedMax="12"
      app:snowflakeSpeedMin="8"
      app:snowflakesAlreadyFalling="false"
      app:snowflakesFadingEnabled="true"
      app:snowflakesNum="250"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:orientation="horizontal">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPhotos"
        android:layout_width="159dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@android:color/transparent"
        android:scrollbars="vertical"/>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"></View>


    <LinearLayout
        android:id="@+id/llview"
        android:layout_width="159dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="0dp"

          android:layout_weight="1.44"
          android:alpha=".4"
          android:background="@color/back_sand_40">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/circle_text"
            android:gravity="center"
            android:text="My name is NON"
            android:textColor="#FFFFFF"
            android:textSize="10dp"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.13"
          android:alpha=".4"
          android:background="@color/back_sand_40">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/circle_text"
            android:gravity="center"
            android:text=" kireji "/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.11"
          android:alpha=".4"
          android:background="@color/back_sand_40">

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_text"
            android:gravity="center"
            android:text="My name is NON"/>
      </android.support.v7.widget.CardView>


      <android.support.design.widget.CoordinatorLayout
          android:id="@+id/main_content"
          android:layout_width="159dp"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center"
          android:layout_weight="1">

        <TextView
            android:id="@+id/main_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="top|right"/>

        <android.support.design.widget.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_black_24dp"
            ads:layout_anchor="@id/main_view"
            ads:layout_anchorGravity="bottom|right|end"
            app:backgroundTint="@color/delicious"/>

      </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
  </LinearLayout>


  <com.google.android.gms.ads.AdView
      android:id="@+id/publisherAdView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      ads:adSize="BANNER"
      ads:adUnitId="@string/ad_unit"/>


</RelativeLayout>
